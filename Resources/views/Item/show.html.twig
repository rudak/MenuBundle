{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Page</th>
                <td>{{ entity.page.name }}</td>>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ entity.rank }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_menu_item') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_menu_item_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
